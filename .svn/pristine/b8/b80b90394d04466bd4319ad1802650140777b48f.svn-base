.electricleft {
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 3px 16px 0px rgba(103, 119, 137, 0.2);
  padding: 20px;
  // min-height: 700px;
}
.time_share {
  font-family: Microsoft YaHei;
  font-weight: bold;
