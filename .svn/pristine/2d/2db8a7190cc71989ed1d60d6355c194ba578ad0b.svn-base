@charset "utf-8";
.hj-user-group-tree {
  white-space: nowrap;
  flex-grow: 0;
  box-sizing: border-box;
  overflow-x: auto;
  background-image: linear-gradient(#324157, #9399a4);
  color: #f8fcff;
  .user-group-title {
    color: #f8fcff;
    display: flex;
    justify-content: space-between;
    padding-left: 10px;
    padding-top: 10px;
    padding-bottom: 10px;
    font-size: 18px;
  }
  .hj-user-group-tree-body {
    background-color: transparent;
    overflow-y: auto;
    width: auto;
    overflow-x: auto;
    .el-tree-node {
      white-space: nowrap;
      width: max-content;
      min-width: 100%;
      color: #ffffff;
    }
    .el-tree-node__content {
      height: 42px;
      line-height: 42px;
      padding: 10px;
      padding-right: 8px;
    }
    .el-tree-node__content:hover {
      background: #aac9fa;
    }
  }

  .el-tree {
    border: none;
  }
  .el-tree--highlight-current
    .el-tree-node.is-current
    > .el-tree-node__content {
    background: #aac9fa;
  }
}
