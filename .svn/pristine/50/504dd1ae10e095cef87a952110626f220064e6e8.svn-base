  border: 1px solid #efefef;
  box-shadow: 0px 0px 8px 6px rgba(245, 245, 250, 0.8);
  border-radius: 5px;
  display: inline-block;
  vertical-align: middle;
  width: 135px;
  height: 128px;
}
.left20 {
  padding-left: 20px;
}
.earningsimgtop {
  height: 45px;
  // border: 1px solid;
  line-height: 45px;
  text-align: center;
}
.earnbottom {
  height: 60px;
  // border: 1px solid red;
  display: flex;
  justify-content: space-around;
}
